{% extends 'base.html.twig' %}

{% block title %}
  {{ title }}
{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="my-3">Authors</h1>
    <a href="/create/author" class="btn btn-primary my-3">Add new author</a><br>
    <table class="table table-bordered table-stripped text-center my-3">
      <thead class="thead-dark">
        <tr>
          <th style="width: 64%;">Name</th>
          <th style="width: 18%;">Count of books</th>
          <th style="width: 18%;"></th>
        </tr>
      </thead>
      <tbody>
        {% for author in authors %}
          <tr>
            <td>{{ author.name }}</td>
            <td>{{ author.books }}</td>
            <td>
              <a href="/edit/author/{{ author.id }}" class="btn btn-success">Edit</a>
              <button class="btn btn-danger" data-toggle="modal" data-target="#modal{{ author.id }}">Delete</button>
              <div class="modal fade" id="modal{{ author.id }}" role="dialog">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Delete author</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                    <div class="modal-body">
                      Delete "{{ author.name }}"?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <form method="POST" action="/delete/author/{{ author.id }}">
                        <button type="submit" class="btn btn-primary">OK</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
