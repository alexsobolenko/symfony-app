{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="my-3">
        <a href="{{ path('app_book_create') }}">
            Add new book
        </a>
    </div>
    <ul class="list-group">
        {% for book in books %}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    {{ book.name }}
                    <span class="text-muted">({{ book.author.name }})</span>
                    <span class="badge bg-primary text-white ml-2" style="font-size: 15px;">${{ book.price }}</span>
                </div>
                <div>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="mr-2">
                        Edit
                    </a>
                    <a href="#" data-toggle="modal" data-target="#modal{{ book.id }}">
                        Delete
                    </a>
                    <div class="modal fade" id="modal{{ book.id }}" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete book</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                Delete book "{{ book.name }} [{{ book.author.name }}]"?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                    Cancel
                                </button>
                                <form method="POST" action="{{ path('app_book_delete', {'id': book.id}) }}">
                                    <button type="submit" class="btn btn-primary">OK</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        {% else %}
            <li class="list-group-item">
                Books not found
            </li>
        {% endfor %}
    </ul>
{% endblock %}
