{% extends 'base.html.twig' %}

{% block title %}
  {{ title }}
{% endblock %}

{% block body %}
    <div class="my-3">
        <a href="{{ path('app_author_create') }}">
            Add new author
        </a>
    </div>
    <ul class="list-group">
        {% for author in authors %}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>{{ author.name }} ({{ author.books|length }})</div>
                <div>
                    <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="mr-2">
                        Edit
                    </a>
                    <a href="#" data-toggle="modal" data-target="#modal{{ author.id }}">
                        Delete
                    </a>
                    <div class="modal fade" id="modal{{ author.id }}" role="dialog">
                        <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete author</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                Delete "{{ author.name }}"?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                    Cancel
                                </button>
                                <form method="POST" action="{{ path('app_author_delete', {'id': author.id}) }}">
                                    <button type="submit" class="btn btn-primary">
                                        OK
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        {% else %}
            <li class="list-group-item">
                Authors not found
            </li>
        {% endfor %}
    </ul>
{% endblock %}
