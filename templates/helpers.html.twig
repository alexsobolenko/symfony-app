{% macro navigation(currentPage, pageItems, prev, next, requestParams) %}
    <ul class="pagination my-3">
        {% if prev is not null %}
            <li class="page-item">
                <a class="page-link" href="{{ append_param('page', prev, requestParams) }}">
                    <i class="fas fa-angle-double-left"></i>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link">
                    <i class="fas fa-angle-double-left"></i>
                </a>
            </li>
        {% endif %}
        {% for item in pageItems %}
            {% if item == '...' %}
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            {% else %}
                {% set pageClass = item == currentPage ? 'page-item active' : 'page-item' %}
                <li class="{{ pageClass }}">
                    <a class="page-link" href="{{ append_param('page', item, requestParams) }}">
                        {{ item }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
        {% if next is not null %}
            <li class="page-item">
                <a class="page-link" href="{{ append_param('page', next, requestParams) }}">
                    <i class="fas fa-angle-double-right"></i>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link">
                    <i class="fas fa-angle-double-right"></i>
                </a>
            </li>
        {% endif %}
    </ul>
{% endmacro %}
